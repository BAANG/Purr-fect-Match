<div class="container">
        <div class="section">
            <div id="userPref" class="col m12 l7">
                <div class="card-panel grey lighten-5 hoverable">
                    <h4 class="center light-blue-text"><i class="material-icons">find_in_page</i> Choose Your Pet
                        Preferences</h4>
                    <div class="row">
                        <form class="col s12">

            <!-- pet types select -->
            <div class="input-field col s12">
                <select id="types">
                    <option disabled selected>Type</option>
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                    <option value="rabbit">Rabbit</option>
                    <option value="small-furry">Small and Furry</option>
                    <option value="Horse">Horse</option>
                    <option value="bird">Bird</option>
                    <option value="barnyard">Barnyard</option>
                    <option value="scales-fins-other">Scales, Fins, and Other</option>
                </select>
            </div>

            <!-- {{!-- Breed form group --}} -->
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="breeds" class="autocomplete">
                        <label for="breeds">Breed</label>
                    </div>
                </div>
            </div>

            <!-- {{!-- gender form group --}} -->
            <div class="input-field col s12">
                <h6>Gender</h6>
                <p>
                    <label for="male">
                        <input class="with-gap" name="gender" type="radio" id="male" value="male" checked />
                        <span>Male</span>
                    </label>

                    <label for="female">
                        <input class="with-gap" name="gender" type="radio" id="female" value="female" />
                        <span>Female</span>
                    </label>
                </p>
            </div>

            <!-- {{!-- age form group --}} -->
            <div class="input-field col s12">
                <select multiple>
                    <option disabled selected>Age</option>
                    <option value="baby">Baby</option>
                    <option value="yong">Young</option>
                    <option value="adult">Adult</option>
                    <option value="senior">Senior</option>
                </select>
            </div>

            <!-- {{!-- size form group --}} -->
            <div class="input-field col s12">
                <select multiple>
                    <option value="size" disabled selected>Size</option>
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="large">Large</option>
                    <option value="x-large">X-Large</option>
                </select>
            </div>

            <!-- {{!-- coat form group --}} -->
            <div class="input-field col s12">
                <select multiple>
                    <option value="age" disabled selected>Coat</option>
                    <option value="short">Short</option>
                    <option value="medium">Medium</option>
                    <option value="long">Long</option>
                    <option value="wire">Wire</option>
                    <option value="hairless">Hairless</option>
                    <option value="curly">Curly</option>
                </select>
            </div>

            <!-- {{!-- tags form group --}} -->
            <div class="input-field col s12">
                <select multiple>
                    <option value="temperament" disabled selected>Temperament</option>
                    <option value="cute">Cute</option>
                    <option value="intelligent">Intelligent</option>
                    <option value="large">Large</option>
                    <option value="playful">playful</option>
                    <option value="happy">Happy</option>
                    <option value="affectionate">Affectionate</option>
                </select>
            </div>

            <!-- {{!-- address location form group --}} -->
            <div class="row">
                    <div class="input-field col s5">
                        <input id="address" type="text" class="validate">
                        <label for="address">Address</label>
                    </div>
                    <div class="input-field col s3">
                        <input id="city" type="text" class="validate">
                        <label for="city">City</label>
                    </div>
                    <div class="input-field col s2">
                        <input id="state" type="text" class="validate">
                        <label for="state">State</label>
                    </div>
                </div>

                <button id="submit" class="btn-large waves-effect waves-light light-blue"><i
                    class="material-icons right">location_searching</i>Submit</button>
            </form>
        </div>
    </div>
</div>



