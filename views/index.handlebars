<header>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <div class="nav-item">
                <i class="fab fa-gratipay fa-2x"></i>
            </div>
        </div>
    </nav>

    <div class="text-white parallax-window" data-parallax="scroll" data-image-src="assets/img/catdog.png">
        <div class="container" style="width: 960px; height: 300px">
